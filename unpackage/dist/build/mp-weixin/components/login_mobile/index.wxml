<block wx:if="{{isUp}}"><view><view data-event-opts="{{[['tap',[['close',['$event']]]]]}}" class="mobile-bg" bindtap="__e"></view><view class="{{['mobile-mask','animated',(isUp)?'slideInUp':'']}}"><view class="input-item"><input type="text" placeholder="输入手机号" maxlength="11" data-event-opts="{{[['input',[['__set_model',['','account','$event',[]]]]]]}}" value="{{account}}" bindinput="__e"/></view><view class="input-item"><input type="text" placeholder="输入验证码" maxlength="6" data-event-opts="{{[['input',[['__set_model',['','codeNum','$event',[]]]]]]}}" value="{{codeNum}}" bindinput="__e"/><button class="code" disabled="{{disabled}}" data-event-opts="{{[['tap',[['code',['$event']]]]]}}" bindtap="__e">{{text}}</button></view><view data-event-opts="{{[['tap',[['loginBtn',['$event']]]]]}}" class="sub_btn" bindtap="__e">立即登录</view></view></view></block>