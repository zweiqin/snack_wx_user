.mobile-bg {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
}
.mobile-mask {
  z-index: 20;
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  padding: 67rpx 30rpx;
  background: #fff;
}
.mobile-mask .info-box {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.mobile-mask .info-box image {
  width: 150rpx;
  height: 150rpx;
  border-radius: 10rpx;
}
.mobile-mask .info-box .title {
  margin-top: 30rpx;
  margin-bottom: 20rpx;
  font-size: 36rpx;
}
.mobile-mask .info-box .txt {
  font-size: 30rpx;
  color: #868686;
}
.mobile-mask .sub_btn {
  width: 690rpx;
  height: 86rpx;
  line-height: 86rpx;
  margin-top: 60rpx;
  background: var(--view-theme);
  border-radius: 43rpx;
  color: #fff;
  font-size: 28rpx;
  text-align: center;
}
.animated {
  -webkit-animation-duration: .4s;
