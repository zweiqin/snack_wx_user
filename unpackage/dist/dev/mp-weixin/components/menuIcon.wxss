.home {
  color: #fff;
  position: fixed;
  height: 56rpx;
  z-index: 99;
  left: 33rpx;
  background: rgba(190, 190, 190, 0.5);
  border-radius: 30rpx;
  display: flex;
  align-items: center;
}
.home .opacity {
  color: #050505;
}
.home .icon-gengduo4,
.home .icon-guanbi5 {
  position: absolute;
  width: 40rpx;
}
.home .icon-gengduo4 {
  font-size: 28rpx;
  text-align: center;
}
.home .animation-box {
  position: relative;
  width: 39rpx;
  height: 28rpx;
}
.icon-guanbi5 {
  font-size: 28rpx;
  text-align: center;
}
.home .homeCon {
  display: flex;
  flex-direction: column;
  font-size: 26rpx;
  padding: 4rpx;
  opacity: 0;
  border: 1px solid #f2f2f2;
}
.home .homeCon::before {
  content: "";
  width: 0;
  height: 0;
  border-left: 15rpx solid transparent;
  border-right: 15rpx solid transparent;
  border-bottom: 17rpx solid #fff;
  position: absolute;
  top: -15rpx;
  right: 66rpx;
  border-bottom-color: #f2f2f2;
}
.home .homeCon::after {
  content: "";
  width: 0;
  height: 0;
  border-left: 15rpx solid transparent;
  border-right: 15rpx solid transparent;
  border-bottom: 17rpx solid #fff;
  position: absolute;
  top: -13rpx;
  right: 66rpx;
}
.home .homeCon .homeCon-box {
  display: flex;
  align-items: center;
  flex-wrap: nowrap;
  width: 100%;
  padding: 15rpx 18rpx;
}
.home .homeCon .homeCon-box .text {
  display: flex;
  flex-wrap: nowrap;
}
.home .homeCon .iconfont {
  display: flex;
  align-items: center;
  padding: 5rpx 3rpx;
  margin-right: 5rpx;
}
.home .homeCon .homeCon-box:nth-child(even) {
  border-top: 1px solid #f2f2f2;
  border-bottom: 1px solid #f2f2f2;
}
.home .homeCon.active {
  position: absolute;
  opacity: 1;
  top: 75rpx;
  -webkit-animation: bounceInLeft 0.5s cubic-bezier(0.215, 0.31, 0.655, 1);
          animation: bounceInLeft 0.5s cubic-bezier(0.215, 0.31, 0.655, 1);
  width: -webkit-max-content;
  width: max-content;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 10rpx;
  color: #333;
  background: #fff !important;
  box-shadow: 0rpx 3rpx 10rpx 2rpx rgba(0, 0, 0, 0.03);
}
.home .line {
  width: 2rpx;
  height: 24rpx;
  margin: 0 12rpx 0 10rpx;
  background: rgba(255, 255, 255, 0.25);
}
.home .line.opacity {
  color: #050505;
  background-color: #050505;
}
.home .icon-xiangzuo {
  font-size: 28rpx;
}
.fade-enter-active,
.fade-leave-active {
  transition: opacity .3s;
}
.fade-enter,
.fade-leave-to {
  opacity: 0;
}
