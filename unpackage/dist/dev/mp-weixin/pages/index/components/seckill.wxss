}
.seckill {
  width: 690rpx;
  height: 410rpx;
  margin: 0 auto;
  padding-top: 35rpx;
  background-color: #ffffff;
}
.seckill .title .name {
  font-size: 32rpx;
  color: #282828;
  font-weight: bold;
}
.seckill .title .point {
  font-size: 30rpx;
  font-weight: bold;
  color: #fc4141;
  margin-left: 16rpx;
}
.seckill .title .time {
  font-size: 24rpx;
}
.seckill .title .time .styleAll {
  width: 35rpx;
  height: 35rpx;
  background-color: rgba(252, 60, 62, 0.09);
  border-radius: 6rpx;
  color: #e93323;
  text-align: center;
}
.seckill .title .time .red ~ .red {
  color: #333333;
  padding: 0 4rpx;
}
.seckill .title .more {
  font-size: 26rpx !important;
  color: #333;
}
.seckill .title .more .iconfont {
  margin-left: 8rpx;
  font-size: 26rpx !important;
  vertical-align: 2rpx;
}
.seckill .conter {
  width: 100%;
  height: 320rpx;
  background-color: #FFFFFF;
  border-radius: 12px;
  margin-top: 26rpx;
}
.seckill .conter .itemCon {
  display: inline-block;
  width: 174rpx;
  margin-right: 24rpx;
}
.seckill .conter .itemCon .item {
  width: 100%;
}
.seckill .conter .itemCon .item .pictrue {
  width: 100%;
  height: 174rpx;
  border-radius: 6rpx;
}
.seckill .conter .itemCon .item .pictrue image {
  width: 100%;
  height: 100%;
  border-radius: 6rpx;
}
.seckill .conter .itemCon .item .name {
  font-size: 24rpx;
  color: #333333;
  margin-top: 10rpx;
}
.seckill .conter .itemCon .item .money .y_money {
  font-size: 20rpx;
  color: #999999;
  text-decoration: line-through;
}
.seckill .conter .itemCon .item .money .x_money {
  color: #FD502F;
  font-size: 24rpx;
  font-weight: bold;
  margin-top: 3rpx;
}
.seckill .conter .itemCon .item .money .x_money .num {
  font-size: 28rpx;
}

