.group-list {
  min-height: 100vh;
  background-color: var(--view-theme) !important;
  padding: 30rpx 0;
}
.group-list .swiper {
  width: 100%;
  position: relative;
  box-sizing: border-box;
  padding: 0 30rpx;
}
.group-list .swiper swiper {
  width: 100%;
  height: 300rpx;
}
.group-list .swiper swiper .slide-image {
  width: 100%;
  height: 300rpx;
  border-radius: 20rpx;
}
.group-list .swiper swiper .uni-swiper-dot {
  width: 8rpx !important;
  height: 8rpx !important;
  border-radius: 50%;
}
.group-list .swiper swiper .uni-swiper-dot-active {
  width: 18rpx !important;
  border-radius: 4rpx;
  background-color: var(--view-theme) !important;
}
.group-list .groupMember {
  height: 100rpx;
}
.group-list .groupMember .line {
  width: 102rpx;
  height: 4rpx;
}
.group-list .groupMember .line.right {
  -webkit-transform: rotate(180deg);
          transform: rotate(180deg);
}
.group-list .groupMember .line image {
  width: 100%;
  height: 100%;
  display: block;
}
.group-list .groupMember .member {
  margin: 0 30rpx;
  color: #fff;
}
.group-list .groupMember .member .pictrue {
  width: 46rpx;
  height: 46rpx;
  position: relative;
}
.group-list .groupMember .member .pictrue image {
  border: 2rpx solid #fff;
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.group-list .groupMember .member .pictrue ~ .pictrue {
  margin-left: -8rpx;
}
.group-list .groupMember .member .pictrue .iconfont {
  position: absolute;
  width: 43rpx;
  height: 43rpx;
  background: rgba(51, 51, 51, 0.6);
  border-radius: 50%;
  top: 2rpx;
  left: 2rpx;
  color: #fff;
  font-size: 10rpx;
  text-align: center;
  line-height: 43rpx;
}
.group-list .list .item {
  width: 690rpx;
  height: 230rpx;
  background-color: #fff;
  border-radius: 14rpx;
  padding: 0 22rpx;
  margin: 0 auto 18rpx auto;
}
.group-list .list .item .pictrue {
  width: 186rpx;
  height: 186rpx;
}
.group-list .list .item .pictrue image {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}
.group-list .list .item .text {
  width: 440rpx;
}
.group-list .list .item .text .name {
  color: #333;
  font-size: 30rpx;
  height: 82rpx;
}
.group-list .list .item .text .bottom {
  margin-top: 10rpx;
}
.group-list .list .item .text .bottom .y_money {
  font-size: 24rpx;
  color: #999;
}
.group-list .list .item .text .bottom .y_money .price {
  text-decoration: line-through;
}
.group-list .list .item .text .bottom .y_money .money {
  color: var(--view-priceColor);
  font-weight: 600;
}
.group-list .list .item .text .bottom .y_money .money .num {
  font-size: 34rpx;
}
.group-list .list .item .text .bottom .bnt {
  height: 58rpx;
  font-size: 24rpx;
  text-align: center;
  position: relative;
  background-color: var(--view-theme);
  border-radius: 28rpx;
}
.group-list .list .item .text .bottom .bnt .light {
  position: absolute;
  width: 28rpx;
  height: 58rpx;
  top: 0;
  left: 50%;
  margin-left: -8rpx;
}
.group-list .list .item .text .bottom .bnt .light image {
  width: 100%;
  height: 100%;
}
.group-list .list .item .text .bottom .bnt .num {
  width: 120rpx;
  background-color: rgba(255, 255, 255, 0.85);
  color: var(--view-theme);
  height: 100%;
  line-height: 58rpx;
  border-radius: 28rpx 0 14rpx 28rpx;
}
.group-list .list .item .text .bottom .bnt .go {
  width: 112rpx;
  background-color: var(--view-theme);
  height: 100%;
  line-height: 58rpx;
  border-radius: 0 28rpx 28rpx 0;
  color: #fff;
}
.group-list .list .item .text .bottom .bnt.gray {
  width: 148rpx;
  background-color: #cccccc;
  color: #fff;
}

